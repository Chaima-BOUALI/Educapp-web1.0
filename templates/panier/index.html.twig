{% extends 'base-front.html.twig' %}

{% block title %}Votre panier{% endblock %}

{% block body %}
    <section class="bg-light p-3">
        <h1>Votre panier</h1>
    </section>

    <table class="table">
        <div class="container">

            <thead>
            <tr>
                <th>Votre Abonnement</th>
                <th>Date de Votre Abonnement</th>
                <th>Type de votre Abonnement</th>
                <th>Tarife de votre Abonnement</th>

            </tr>
            </thead>
        </div>

    </table>

        {% for element in dataPanier %}
            <tr>
                <td>{{ element.abonnement.type_abonnement }}</td>
                <td class="text-end">{{ element.abonnement.prix }} â‚¬</td>
                <td>{{ element.quantite }}</td>
                <td class="text-end">{{ element.quantite * element.abonnement.prix }} dt</td>
                <td>
                    <a href="{{path("panier_add", {id: element.abonnement.id})}}" class="btn btn-success">
                        <i class="bi bi-cart-plus"></i>
                    </a>
                    <a href="{{path("panier_remove", {id: element.abonnement.id})}}" class="btn btn-warning">
                        <i class="bi bi-cart-dash"></i>
                    </a>
                    <a href="{{path("panier_delete", {id: element.abonnement.id})}}" class="btn btn-danger">
                        <i class="bi bi-cart-x"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">Votre panier est vide</td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <td colspan="3">Total</td>
            <td class="text-end">{{ total }} dt </td>

        </tr>
        </tfoot>
    </table>

{% endblock %}