{% extends 'base.html.twig' %}

{% block title %}Publicity index{% endblock %}

{% block body %}
    <h1>Publicity index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomPublicity</th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>DescriptionPub</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for publicity in publicities %}
            <tr>
                <td>{{ publicity.id }}</td>
                <td>{{ publicity.nomPublicity }}</td>
                <td>{{ publicity.startDate ? publicity.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ publicity.endDate ? publicity.endDate|date('Y-m-d') : '' }}</td>
                <td>{{ publicity.descriptionPub }}</td>
                <td>{{ publicity.image }}</td>
                <td>
                    <a href="{{ path('publicity_show', {'id': publicity.id}) }}">show</a>
                    <a href="{{ path('publicity_edit', {'id': publicity.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('publicity_new') }}">Create new</a>
{% endblock %}
