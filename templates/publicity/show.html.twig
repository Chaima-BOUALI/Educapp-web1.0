{% block body %}
    <h1>Publicity</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ publicity.id }}</td>
            </tr>
            <tr>
                <th>NomPublicity</th>
                <td>{{ publicity.nomPublicity }}</td>
