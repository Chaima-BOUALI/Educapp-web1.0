{% extends 'base.html.twig' %}

{% block title %}Les publicités{% endblock %}

{% block body %}
    <h1>Les publicités</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ publicity.id }}</td>
            </tr>
            <tr>
                <th>NomPublicity</th>
                <td>{{ publicity.nomPublicity }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ publicity.startDate ? publicity.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ publicity.endDate ? publicity.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DescriptionPub</th>
                <td>{{ publicity.descriptionPub }}</td>
            </tr>
        </tbody>
    </table>
    <br>
    <br>
<button class="btn-warning">

    <a href="{{ path('publicity_index') }}">Retour à la liste</a>
</button>
    <br>
    <br>

    <button class="btn-outline-primary">

<a href="{{ path('publicity_edit', {'id': publicity.id}) }}">Modifier</a>
</button>
    <br>
    <br>

    {{ include('publicity/_delete_form.html.twig') }}
{% endblock %}
