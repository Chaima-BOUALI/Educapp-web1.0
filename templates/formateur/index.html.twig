{% extends 'base.html.twig' %}

{% block title %}Formateur index{% endblock %}

{% block body %}
    <h1>Formateur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomFormateur</th>
                <th>PrenomFormateur</th>
                <th>Email</th>
                <th>NumeroFormateur</th>
                <th>Sexe</th>
                <th>DateDeNaissance</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formateur in formateurs %}
            <tr>
                <td>{{ formateur.id }}</td>
                <td>{{ formateur.nomFormateur }}</td>
                <td>{{ formateur.prenomFormateur }}</td>
                <td>{{ formateur.email }}</td>
                <td>{{ formateur.numeroFormateur }}</td>
                <td>{{ formateur.sexe }}</td>
                <td>{{ formateur.dateDeNaissance ? formateur.dateDeNaissance|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('formateur_show', {'id': formateur.id}) }}">show</a>
                    <a href="{{ path('formateur_edit', {'id': formateur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('formateur_new') }}">Create new</a>
{% endblock %}
