{% extends 'base.html.twig' %}

{% block title %}Session{% endblock %}

{% block body %}
    <h1>Session</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ session.id }}</td>
        </tr>
        <tr>
            <th>NomSession</th>
            <td>{{ session.nomSession }}</td>
        </tr>
        <tr>
            <th>StartDate</th>
            <td>{{ session.startDate ? session.startDate|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>EndDate</th>
            <td>{{ session.endDate ? session.endDate|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>DescriptionSession</th>
            <td>{{ session.descriptionSession }}</td>
        </tr>
        <tr>
            <th>PlacesDisponibles</th>
            <td>{{ session.placesDisponibles }}</td>
        </tr>
        <tr>
            <th>UrlImage</th>
            <td>{{ session.urlImage }}</td>
        </tr>
        </tbody>
    </table>
    <br>
    <br>
    <button class="btn-warning" type="submit">
        <a href="{{ path('session_index') }}">Afficher la liste des sessions</a>
    </button>
    <br>
    <br>
    <button class="btn-outline-primary" type="submit">
        <a href="{{ path('session_edit', {'id': session.id}) }}">Modifier cette session</a>
    </button>
    <br>
    <br>
    {{ include('session/_delete_form.html.twig') }}
{% endblock %}